<?xml version="1.0" encoding="utf-8"?>
<com.aricneto.twistytimer.layout.TimerMainLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/timer_main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?mainColorBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/ToolBarStyle"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:titleTextAppearance="@style/Toolbar.TitleText" />

        <com.aricneto.twistytimer.layout.TimerTabLayout
            android:id="@+id/main_tabs"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?attr/colorPrimary"
            android:elevation="@dimen/toolbar_elevation"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabMaxWidth="0dp"/>

    </LinearLayout>

    <com.aricneto.twistytimer.layout.LockedViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</com.aricneto.twistytimer.layout.TimerMainLayout>
