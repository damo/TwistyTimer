<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <View
        android:id="@+id/up"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_toRightOf="@+id/left"
        tools:background="@drawable/square"
        android:layout_margin="4dp"/>

    <View
        android:id="@id/left"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@id/up"
        tools:background="@drawable/square"
        android:layout_margin="4dp"/>

    <View
        android:id="@+id/front"
        android:layout_toRightOf="@id/left"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@id/up"
        tools:background="@drawable/square"
        android:layout_margin="4dp"/>

    <View
        android:id="@+id/down"
        android:layout_toRightOf="@+id/left"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@id/front"
        tools:background="@drawable/square"
        android:layout_margin="4dp"/>

    <View
        android:id="@+id/right"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@id/up"
        android:layout_toRightOf="@id/front"
        tools:background="@drawable/square"
        android:layout_margin="4dp"/>

    <View
        android:id="@+id/back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_toRightOf="@id/right"
        android:layout_below="@id/up"
        tools:background="@drawable/square"
        android:layout_margin="4dp"/>

    <TextView
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_cached_black_24dp"
        android:drawablePadding="8dp"
        android:layout_below="@id/down"
        android:gravity="center"
        android:padding="8dp" />

    <TextView
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_below="@id/down"
        android:layout_alignRight="@id/back"
        android:background="?attr/selectableItemBackground"
        android:textAllCaps="true"
        android:layout_alignBottom="@id/reset"
        android:textColor="?colorAccent"
        android:textStyle="bold"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/action_done" />


</RelativeLayout>
